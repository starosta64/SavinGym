<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_splash_blue"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.31"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash"/>
    <ImageView
        android:layout_width="@dimen/logo_dimen_size"
        android:layout_height="@dimen/logo_dimen_size"
        android:layout_marginTop="@dimen/logo_dimen_margin"
        android:src="@drawable/logo"
        android:background="@drawable/ic_ellipse_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>